<?xml version="1.0" encoding="UTF-8"?>
<config version="1.0">
    <basedirs
        template-dir="/shared/templates" 
        output-dir="/shared/outputs" />

    <inputs>
        <input id="input1" source="http://www.clicrbs.com.br/xml" type="com.rbs.XmlTool" use-in-context="false">
            <input id="sub-input1" condition="xpath:/root/galleries/gallery" source="http://www.clic.com.br/gallery?id={@id}&amp;tag={name}" />
        </input>
        <input id="input2" source="file:/shared/xml/xml1.xml" type="com.rbs.XmlTool" />
    </inputs>
    <!--
    <templates>
        <template id="template1" name="template.vm" />
    </templates>
    -->
    <outputs>
        <output template="common/template.vm" 
                inputs="input1, input2" 
                filename-pattern="saida{sequence}.json"
                condition="xpath:[input1]/root/articles" />
        
        <output template="template2.vm" inputs="input1" filename-pattern="saida.xml" />
    </outputs>
</config>
